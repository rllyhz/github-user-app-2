<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/bg_bottom_nav</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="ExploreSearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/grey_light</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:imeOptions">actionSearch</item>
    </style>

</resources>